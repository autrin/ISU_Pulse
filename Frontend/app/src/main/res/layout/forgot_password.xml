<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="24dp">

        <TextView
            android:id="@+id/forgot_password_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="32dp"
            android:text="Forgot Password"
            android:textColor="@color/design_default_color_primary"
            android:textSize="28sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/forgot_password_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/forgot_password_title"
            android:layout_marginBottom="24dp"
            android:text="Enter your email address and we'll send you an OTP to reset your password."
            android:textAlignment="center"
            android:textColor="@color/design_default_color_on_surface"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/email_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/forgot_password_description"
            android:layout_marginBottom="24dp"
            android:background="@drawable/edit_text_background"
            android:hint="Enter your email"
            android:inputType="textEmailAddress"
            android:padding="16dp"
            android:textColor="@color/design_default_color_on_surface"
            android:textColorHint="@color/design_default_color_on_surface" />

        <Button
            android:id="@+id/send_otp_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/email_input"
            android:layout_marginBottom="32dp"
            android:backgroundTint="@color/design_default_color_primary"
            android:padding="16dp"
            android:text="Send OTP"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/otp_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/send_otp_button"
            android:layout_marginBottom="16dp"
            android:text="Enter the OTP sent to your email"
            android:textAlignment="center"
            android:textColor="@color/design_default_color_on_surface"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/otp_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/otp_description"
            android:layout_marginBottom="24dp"
            android:background="@drawable/edit_text_background"
            android:hint="Enter OTP"
            android:inputType="number"
            android:padding="16dp"
            android:textColor="@color/design_default_color_on_surface"
            android:textColorHint="@color/design_default_color_on_surface" />

        <Button
            android:id="@+id/verify_otp_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/otp_input"
            android:backgroundTint="@color/design_default_color_primary"
            android:padding="16dp"
            android:text="Verify OTP"
            android:textColor="@color/white"
            android:textSize="16sp" />

    </RelativeLayout>
</ScrollView>
