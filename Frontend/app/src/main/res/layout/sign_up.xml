<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#5E98D0"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/sign_up_page_isu_pulse"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        android:text="Sign up"
        android:textColor="#FFFFFF"
        android:textSize="24sp" />

    <EditText
        android:id="@+id/netid_isu_pulse"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:background="@android:drawable/edit_text"
        android:hint="NetID"
        android:inputType="text"
        android:padding="10dp"
        android:textColor="#000000"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/firstname_isu_pulse"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:background="@android:drawable/edit_text"
        android:hint="First name"
        android:inputType="text"
        android:padding="10dp"
        android:textColor="#000000"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/lastname_isu_pulse"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:background="@android:drawable/edit_text"
        android:hint="Last name"
        android:inputType="text"
        android:padding="10dp"
        android:textColor="#000000"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/email_isu_pulse"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:background="@android:drawable/edit_text"
        android:hint="Email"
        android:inputType="textEmailAddress"
        android:padding="10dp"
        android:textColor="#000000"
        android:textStyle="bold" />

    <Spinner
        android:id="@+id/usertype_isu_pulse"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="UserType"
        android:background="@android:drawable/btn_dropdown"
        android:padding="10dp"
        android:textColor="#000000"
        android:inputType="text"
        android:textStyle="bold"
        android:layout_marginBottom="16dp" />



